<h1>Listing paragraphs</h1>

<table>
  <tr>
    <th>Body</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @paragraphs.each do |paragraph| %>
  <tr>
    <td><%= paragraph.body %></td>
    <td><%= link_to 'Show', post_paragraph_path(@post, paragraph) %></td>
    <td><%= link_to 'Edit', edit_post_paragraph_path(@post, paragraph) %></td>
    <td><%= link_to 'Destroy', post_paragraph_path(@post, paragraph), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Paragraph', new_post_paragraph_path(@post) %>
