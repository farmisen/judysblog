<p id="notice"><%= notice %></p>


<article class="well">
  <header>
    <h3><%= @post.title %></h3>

    <p class="time muted">
      <time datetime="<%= @post.created_at %>"><%= l @post.created_at %></time>
    </p>
  </header>

  <% @post.blocks.each do |block| %>
      <% if block.isTextBlock() %>
          <div>
            <%= block.body %>
          </div>
      <% else %>
          <figure style="display: inline-block; white-space: normal;">
            <%= image_tag block.image.url(:small) %>
            <figcaption><%= block.body %></figcaption>
          </figure>
      <% end %>
  <% end %>

</article>

<% if admin_signed_in? %>
    <%= link_to 'Edit', edit_post_path(@post) %> |
<% end %>
<%= link_to 'Back', posts_path %>
