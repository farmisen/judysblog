<%= form_for([@post, @block]) do |f| %>
    <% if @block.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@block.errors.count, "error") %> prohibited this block from being saved:</h2>

          <ul>
            <% @block.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :body %>
      <br/>
      <%= f.text_area :body %>
    </div>

    <div class="field">
      <%= f.label :image %>
      <br/>
      <%= image_tag @block.image.url(:small) %>
      <%= f.file_field :image %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
